<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/top.ejs %>

    <div>Admin Page</div>

    <div class="container">
      <h2>Rooms</h2>

      <div>
        <% rooms.forEach(function(r) { %>
          <h3>
            <%= r.roomName %>
          </h3>

          <div>Current record:
            <%= r.time %>
              <br /> Held by:
              <%= r.name %>
                <br />ID:
                <%= r.id %>
          </div>

          <div class="edit-link">
            <a id="edit" href="/roomEdit?id=<%- r.id %>">Edit</a>
          </div>

          <% }); %>
      </div>

      <h2>Teams</h2>

      <div>
        <% teams.forEach(function(r) { %>
          <h3>
            <%= r.name %>
          </h3>

          <div>
            Current records held:
            <%= r.records %>
              <br />ID:
              <%= r.id %>
          </div>

          <div class="edit-link">
            <a id="edit" href="/teamEdit?id=<%- r.id %>">Edit</a>
          </div>

          <% }); %>
      </div>

    </div>

</body>

</html>