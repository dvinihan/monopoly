<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/top.ejs %>
    <form class="container">

      <h3>Choose a room to delete:</h3>

      <select style="margin-left:30px;" id="select-delete-room" name="id">
        <option value=''></option>
        <% rooms.forEach(function(r) { %>
          <option value="<%- r.id %>">
            <%= r.name %>
          </option>
          <% }); %>
      </select>

      <button id="room-delete-button" type="submit">Delete</button>
    </form>

    <% include ../partials/footer.ejs %>
</body>

</html>