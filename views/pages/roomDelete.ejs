<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/adminTop.ejs %>
    <form class="container" method="post">

      <h3>Choose a room to delete:</h3>

      <select name="id">
        <option value=''></option>
        <% rooms.forEach(function(r) { %>
          <option value="<%- r.id %>">
            <%= r.name %>
          </option>
          <% }); %>
      </select>

      <button type="submit">Delete</button>
    </form>

</body>

</html>