<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>

    <style>
      #score,
      #score-dec,
      #score-inc {
        display: inline;
      }
    </style>
</head>

<body>

  <% include ../partials/top.ejs %>

    <div class="team-edit">
      <h3>
        Name:
      </h3>
      <input id='team-name-input' value="<%- team.name %>" />
      <br />
      <button id="score-dec">-</button>
      <div id="score">Score:
        <span id=score-number>
          <%= team.score %>
        </span>
      </div>
      <button id="score-inc">+</button>

      <div>
        <br />ID:
        <span id='team-id'>
          <%= team.id %>
        </span>
      </div>

      <button id="team-save">Save</button>
    </div>

    <% include ../partials/footer.ejs %>
</body>

</html>