<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header.ejs %>
</head>

<body>
    <div class="jumbotron text-center">
        <div class="container">
            <h1>ROOM MONOPOLY</h1>
            <p>This is the database page.</p>
            <p>
                <a href='/'>Click here to go home.</a>
            </p>

        </div>
    </div>

    <div class="container">
        <h2>Rooms</h2>

        <ul>
            <% results.forEach(function(r) { %>
                <h3>
                    <%= r.roomName %>
                </h3>
                <div>
                    Current record:
                    <%= r.time %>
                        <br /> Held by:
                        <%= r.name %>
                </div>
                <% }); %>
        </ul>

    </div>

</body>

</html>