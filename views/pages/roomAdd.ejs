<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/top.ejs %>

    <form class="room-add container">
      <h3>
        Room Name:
      </h3>
      <input id="new-room-name" name="name" />

      <div>
        <br /> Current record:
        <input id="new-room-record" name="time" />
        <br />Held by:
        <select id="new-room-record-team" name="teamId">
          <% teams.forEach(function(t) { %>
            <option value="<%- t.id %>">
              <%= t.name %>
            </option>
            <% }); %>
        </select>
      </div>

      <button id="add-room" type="submit">Save</button>
    </form>

    <% include ../partials/footer.ejs %>
</body>

</html>